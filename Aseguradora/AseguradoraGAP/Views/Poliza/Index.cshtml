@model IEnumerable<AseguradoraGAP.Models.PolizaModel>

@{
    ViewBag.Title = "Polizas Disponibles";
}

<h2>Polizas Disponibles</h2>

<p>
    @Html.ActionLink("Crear Poliza Nueva", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Descripcion
        </th>
        <th>
            Tipo Cobertura
        </th>
        <th>
            Cobertura
        </th>
        <th>
            Inicio Vigencia
        </th>
        <th>
            Periodo
        </th>
        <th>
            Precio
        </th>
        <th>
            Riesgo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipoCobertura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cobertura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.inicioVigencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.periodo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.riesgo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { @Id = item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { @Id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { @Id = item.Id })
        </td>
    </tr>
}

</table>
